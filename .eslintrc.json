{
  "parser": "@typescript-eslint/parser", // Use the TypeScript parser
  "plugins": ["@typescript-eslint", "prettier"], // Add the TypeScript plugin
  "extends": [
    "plugin:@typescript-eslint/recommended", // Extend with recommended TypeScript rules
    "plugin:prettier/recommended",
    "next"
  ],
  "rules": {
    "prettier/prettier": "error"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  }
}
